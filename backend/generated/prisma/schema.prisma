generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
  rol      Rol    @default(VIEWER)
  sales    Sale[]

  createdAt DateTime @default(now())
}

enum Rol {
  ADMIN
  EDITOR
  VIEWER
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  price       Float
  stock       Int
  imageUrl    String? // ðŸ‘ˆ stores only the local URL or path (will use Cloudinary in the future)
  sales       Sale[]
  createdAt   DateTime @default(now())
}

model Sale {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  product   Product @relation(fields: [productId], references: [id])
  productId String  @db.ObjectId
  amount    Int
  total     Float
  user      User    @relation(fields: [userId], references: [id])
  userId    String  @db.ObjectId

  createdAt DateTime @default(now())
}
